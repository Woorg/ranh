.student-life
	display block
	background-color #0c3048
	&__in
		padding-top 40px
		padding-bottom 40px
		@extend .in
	&__title
		position relative
		margin-bottom 16px
		font-family $calibri
		font-size 36px
		line-height 1.2
		text-transform uppercase
		color #fff
		&:after
			position absolute
			top 50%
			left 0
			margin-top -5px
			width 100%
			height 3px
			content ""
			background-color #fff
			z-index 0
		span
			position relative
			padding-right 6px
			display inline-block
			background-color #0c3048
			letter-spacing tracking(111)
			z-index 1
	&__list
		clearfix()
	&__item
		margin-left ratio-percentage(36,1226)
		float left
		width ratio-percentage(384,1226)
		&:first-child
			margin-left 0
	&__item-link
		display block
		text-decoration none
		&:hover
			text-decoration none
	&__item-image
		position relative
		display block
		width 100%
		img
			display block
			width 100%
			height 100%
	&__image-fade
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background-color rgba(255,255,255,0)
		visibility hidden
		transition all .3s ease
	&__item-title
		padding-top 16px

		display block
	&__item-icon
		display inline-block
		vertical-align middle
		&_1
			bg($student-icon-1)
		&_2
			bg($student-icon-2)
		&_3
			bg($student-icon-3)
	&__item-text
		margin-left 5px
		display inline-block
		vertical-align middle
		font-family $calibri
		font-size 30px
		font-weight 400
		text-transform uppercase
		color #fff
	&__item-link
		&:hover
			.student-life__image-fade
				visibility visible
				background-color rgba(255,255,255,.5)




