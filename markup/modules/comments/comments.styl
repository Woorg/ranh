.comments
	position relative
	display block
	overflow hidden
	&__in
		position relative
		padding-top 50px
		padding-bottom 50px
		@extend .in
	&__title
		position relative
		margin-bottom 30px
		font-family $calibri
		font-size 36px
		line-height 1.2
		text-transform uppercase
		color #911316
		&:after
			position absolute
			top 50%
			left 0
			margin-top -5px
			width 100%
			height 3px
			content ""
			background-color #911316
			z-index 0
		span
			position relative
			padding-right 5px
			display inline-block
			background #FFF
			letter-spacing tracking(111)
			z-index 1
	&__list
		position relative
		padding-bottom 50px
		clearfix()
	.bx-viewport
		&:after
		&:before
			position absolute
			top 0
			content ""
			background #FFF
			z-index 1
		&:after
			right 0
			width 1px
			height 100%
			background #fff
		&:before
			left 0
			width 1px
			height 100%
	&__item
		border-left 1px solid #E8E8E8
		width ratio-percentage(330,1226)
		float left
		&:first-child
			border-left 1px solid transparent
	&__item-user
		border 3px solid #b0bebf
		margin auto
		margin-bottom 50px
		width 170px
		height 170px
		border-radius 50%
		img
			display block
			max-width 100%
			height auto
			border-radius 50%
	&__item-text
		margin-bottom 30px
		padding-left 20px
		padding-right 20px
		height 133px
		font-size 24px
		font-style italic
		line-height 27px
		text-align center
		color #7e7e7e
	&__item-note
		font-family $calibri
		font-weight 700
		font-size 16px
		text-align center

.comments-nav
	position absolute
	top 46%
	right 0
	left 0
	@extend .in
	&__link
		position absolute
		top 0
		cursor pointer
		display block
		border-radius 50%
		hide-text()

		&_back
			// left ratio-percentage(56,1226)
			left 10px
			bg($slider-nav-left)
			@media all and (min-width: 1401px)
				left -56px


		&_next
			// right ratio-percentage(56,1226)
			right 10px
			bg($slider-nav-right)
			@media all and (min-width: 1401px)
				right -56px

