.news
	background-color #0c3048
	&__in
		padding-top 50px
		padding-bottom 10px
		@extend .in
	&__title
		position relative
		margin-bottom 30px
		font-family $calibri
		font-size 36px
		line-height 1.2
		text-transform uppercase
		color #fff
		&:after
			position absolute
			top 50%
			left 0
			margin-top -5px
			width 100%
			height 3px
			content ""
			background-color #fff
			z-index 0
		span
			position relative
			padding-right 12px
			display inline-block
			background #0c3048
			letter-spacing tracking(111)
			z-index 1

	&__list
		margin-left ratio-percentage(-22,1226)
		font-size 0
		overflow hidden
		clearfix()
	&__item
		margin-left ratio-percentage(30,1226)
		margin-bottom 30px
		display inline-block
		width ratio-percentage(263,1226)
		// min-height 285px
		vertical-align top
	&__item_wide
		width ratio-percentage(610,1226)
	&__item-link
		display block
		cursor pointer
		text-decoration none
		&:hover
			text-decoration none
	&__item-image
		position relative
		display block
		width 100%
		overflow hidden
		background-color rgba(255,255,255,0)
		img
			display block
			width 100%
			height 100%
	&__image-fade
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background-color rgba(255,255,255,0)
		visibility hidden
		transition all .3s ease
	&__item-badge
		position absolute
		right 0
		bottom 0
		border 2px solid #0D2F48
		border-width 2px 0 0 2px
		padding 8px 18px
		background-color #e32024
		font-size 16px
		font-weight 400
		color #fff
		z-index 1
	&__item-bottom
		padding-top 10px
		display block

	&__item-title
		margin-bottom 4px
		font-size 16px
		font-weight 700
		color #FFF
		line-height 18px
	&__item-text
		padding-right 60px
		font-size 12px
		font-weight 400
		line-height 16px
		color #FFF
	&__item-link
		&:hover
			.news__image-fade
				visibility visible
				background-color rgba(255,255,255,.5)





