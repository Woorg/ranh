.topline
	background-color #0c3048
	&__in
		padding-top 16px
		padding-bottom 17px
		@extend .in
		height 56px
		clearfix()
.lang
	margin-left 20px
	float left
	font-size 0
	color #FFF
	&__icon
		&_eng
			margin-top -2px
			display inline-block
			vertical-align middle
			bg($lang-en)
	&__text
		margin-left 6px
		display inline-block
		vertical-align middle
		font-size 16px
		font-weight 400
		line-height 22px
		color #FFF

.personal
	float right
	width 184px
	font-size 0
	color #FFF
	text-decoration none
	&__icon
		margin-top -10px
		display inline-block
		vertical-align middle
		bg($personal-area)
	&__text
		margin-left 12px
		display inline-block
		vertical-align middle
		font-size 16px
		font-weight 400
		line-height 24px


