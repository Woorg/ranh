.footer
	background-color #0C3048
	&__in
		padding-top 43px
		padding-bottom 40px
		@extend .in
		clearfix()
	&__w
		float left
		width 620px
	&__info
		margin-bottom 13px
		font-size 16px
		font-weight 400
		line-height 18px
		color #fff
		a
			text-decoration underline
			color #FFF
			&:hover
				text-decoration none
.search-form
	margin-top 33px
	margin-right 18px
	float right
	width 232px
	font-size 0
	&__input
		border 1px solid #A9A9A9
		border-width 1px 0 1px 1px
		padding 5px 5px
		display inline-block
		vertical-align top
		width 160px
		height 25px
		background-color #FFF
		font-size 12px
		font-weight 400
		color #000
	&__submit
		border 1px solid #A9A9A9
		margin-left 5px
		padding 0 10px
		display inline-block
		vertical-align top
		height 25px
		background-color #DEDEDE
		font-size 12px
		font-weight 400
		color #000
		text-transform uppercase



