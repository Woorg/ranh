.hero
	min-height 270px
	overflow hidden
.slider
	width 100%
	min-height 270px
	overflow hidden
	clearfix()
	&__item
		position relative
		float left
		width 100%
		height auto
		overflow hidden
	&__item-image
		text-align center
		overflow hidden
		// height 454px // delete
		img
			display inline-block
			max-width 100%
			height auto
	&__item-in
		position relative
		@extend .in
	&__item-slogan
		position absolute
		bottom 0
		// background url('../images/general/slogan-bg.png') 50% no-repeat
		font-family $calibri
		font-size 48px
		font-weight 400
		font-style italic
		line-height 40px
		color #fff
		span
			display block
			font-weight 700
		&_one
			left 12px
			bottom 34px
			text-align left
			img
				position absolute
				bottom -50px
				left -170px
		&_two
			right 6px
			bottom 20px
			text-align right
			img
				position absolute
				bottom -50px
				right -170px
.slider__item-slogan-text
	position relative
	z-index 1
.slider__item
	&_1
		.slider__item-slogan_one
			animation-name 'bounceInRight'
			animation-duration 3s
			animation-delay 0s
			animation-fill-mode both
		.slider__item-slogan_two
			animation-name 'bounceInLeft'
			animation-duration 3s
			animation-delay 0s
			animation-fill-mode both
	&_2
		.slider__item-slogan_one
			animation-name 'bounceInRight'
			animation-duration 3s
			animation-delay 0s
			animation-fill-mode both
		.slider__item-slogan_two
			animation-name 'bounceInLeft'
			animation-duration 3s
			animation-delay 0s
			animation-fill-mode both
	&_3
		.slider__item-slogan_one
			animation-name 'bounceInRight'
			animation-duration 3s
			animation-delay 0s
			animation-fill-mode both
		.slider__item-slogan_two
			animation-name 'bounceInLeft'
			animation-duration 3s
			animation-delay 0s
			animation-fill-mode both


