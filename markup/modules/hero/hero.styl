@css {

	.bx-wrapper {
	  position: relative;
	  padding: 0;
	  *zoom: 1;
	  -ms-touch-action: pan-y;
	  touch-action: pan-y;
	}
	.bxslider {
	  margin: 0;
	  padding: 0;
	}
	ul.bxslider {
	  list-style: none;
	}
	.bx-viewport {
	  /*fix other elements on the page moving (on Chrome)*/
	  -webkit-transform: translatez(0);
	}

	/* PAGER */
	.bx-wrapper .bx-pager {
	  position: relative;
	  text-align: center;
	  font-size: .85em;
	  font-family: Arial;
	  font-weight: bold;
	  color: #666;
	  padding-top: 10px;
	  z-index: 10;
	}
	.bx-wrapper .bx-pager.bx-default-pager a {
		border: 1px solid #b1b1af;
		background: #e9e9e9;
		text-indent: -9999px;
		display: block;
		width: 14px;
		height: 14px;
		margin: 0 5px;
		outline: 0;
		-moz-border-radius: 50%;
		-webkit-border-radius: 50%;
		border-radius: 50%;
	}
	.bx-wrapper .bx-pager.bx-default-pager a:hover,
	.bx-wrapper .bx-pager.bx-default-pager a.active,
	.bx-wrapper .bx-pager.bx-default-pager a:focus {
	  background: #951A1D;
	}
	.bx-wrapper .bx-pager-item,
	.bx-wrapper .bx-controls-auto .bx-controls-auto-item {
	  display: inline-block;
	  *zoom: 1;
	  *display: inline;
	}
	.bx-wrapper .bx-pager-item {
	  font-size: 0;
	  line-height: 0;
	}


}


